<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/font"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.view.viewPager.BestCarFrag">

    <ImageView
        android:id="@+id/photoCarImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameCarTxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_regular"
        android:gravity="center|left"
        android:padding="5sp"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/photoCarImg"
        app:layout_constraintTop_toTopOf="@+id/photoCarImg" />

    <TextView
        android:id="@+id/priceCarTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkerBlue"
        android:fontFamily="@font/raleway_regular"
        android:gravity="right"
        android:padding="5sp"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/photoCarImg"
        app:layout_constraintTop_toTopOf="@+id/photoCarImg"
        tools:background="@color/colorDarkerBlue" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/colorDarkerBlue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/photoCarImg"
        app:layout_constraintEnd_toEndOf="@+id/photoCarImg"
        app:layout_constraintStart_toStartOf="@+id/photoCarImg"
        tools:background="@color/colorDarkerBlue">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/car_door" />

        <TextView
            android:id="@+id/doorsTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/seat" />

        <TextView
            android:id="@+id/seatTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/manual_transmission" />

        <TextView
            android:id="@+id/manualTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>